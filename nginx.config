events { worker_connections 1024; }

http {
  server {
    listen 80;

    location / {
      proxy_pass http://client:4173/;
    }

    # configure here where requests to http://localhost/api/...
    # are forwarded
    location /api/ {
      proxy_set_header Host $host;
      proxy_pass http://server:8080/api/;
    }
  }
}